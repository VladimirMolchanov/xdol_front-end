doctype html
html(lang="ru")
    include ../includes/head.pug
    body
        include ../includes/header.pug
        main.main-content(style="position:relative")
            .container.container__feedback
                .row
                    .col-12
                        .main-content__home-link
                            a.default-link.default-link-1.arrow-left(href="/dist/" data-css="default-link-1") 
                                include ../includes/arrows.pug
                                span На главную
                        .main-content__content
                            .feedback
                                h2 Обратная связь
                                .form-group.form-group-inline
                                    label.text-x-secondary Как вас зовут
                                    input.form-control(type="text" value="Дмитрий")
                                .form-group.form-group-inline
                                    label.text-x-secondary Ваш телефон
                                    input.form-control(type="text")
                                .form-group.form-group-inline.feedback__form-email
                                    label.text-x-secondary Ваша эл. почта
                                    input.form-control(type="text")
                                .form-group.feedback__form-text-area
                                    textarea(name="q", cols="30", rows="10" placeholder="Опишите задачу или прикрепите файл с описанием")
                                .form-group.feedback__form-file
                                    .input-file
                                        input#file(type="file").field__file
                                        label(for="file")
                                            .field__file-fake
                                                .field__file-fake--close
                                                    <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
