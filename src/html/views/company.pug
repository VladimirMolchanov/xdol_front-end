                                        .main-content__listclient-item.d-flex.align-items-center.justify-content-center
                                            img(src="./uploads/UT.png", alt="").img-fluid
                                    .col-6.col-sm-6.col-md-6.col-lg-3.col-xl-3
                                        .main-content__listclient-item.d-flex.align-items-center.justify-content-center
                                            img(src="./uploads/Microsoft.png", alt="").img-fluid
                                    .col-6.col-sm-6.col-md-6.col-lg-3.col-xl-3
                                        .main-content__listclient-item.d-flex.align-items-center.justify-content-center
                                            img(src="./uploads/Intel.png", alt="").img-fluid
                                    .col-6.col-sm-6.col-md-6.col-lg-3.col-xl-3
                                        .main-content__listclient-item.d-flex.align-items-center.justify-content-center
                                            img(src="./uploads/JPMC.png", alt="").img-fluid
            +further('/dist/services.html', 'Подробнее об услугах')
